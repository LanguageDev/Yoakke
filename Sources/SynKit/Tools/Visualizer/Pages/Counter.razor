@page "/counter"
@using Yoakke.SynKit.RegExes

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<MudBlazor.MudTextField @bind-Value="@RegexText" Immediate="true" />
<br />
<p>Regex status: @regexStatus</p>

@code {
    private string regexText = string.Empty;
    public string RegexText
    {
        get => this.regexText;
        set
        {
            this.regexText = value;
            try
            {
                PcreParser.Parse(value);
                regexStatus = "Ok";
            }
            catch (RegExParseException parseError)
            {
                regexStatus = $"Error: {parseError.Message}";
            }
        }
    }

    private string regexStatus = string.Empty;
}
